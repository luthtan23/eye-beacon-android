<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eyebeaconandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/primaryDarkColor</item>

        <item name="android:textColor">@color/customColorTextDefault</item>

        <item name="android:colorForeground">@color/white</item>

        <item name="colorSurface">@color/customColorSurface</item>
        <item name="colorOnSurface">@color/customColorSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="fontFamily">@font/montserrat_font</item>
        <item name="colorBackgroundFloating">@color/background_holo_light</item>
        <item name="linkColor">@color/linkTextColorLightMode</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorControlHighlight">@color/darker_gray</item>
        <item name="android:navigationBarColor">@color/customNavigationBarButton</item>

        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
        <item name="textInputStyle">@style/CustomTextFieldStyle</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="SplashScreenStyle" parent="Theme.Eyebeaconandroid">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CustomTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="passwordToggleTint">@color/custom_textfield_stroke</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/custom_textfield_stroke</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/custom_background_tint</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>